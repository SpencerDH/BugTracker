@model IEnumerable<BugTracker.Models.Project>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Projects</h1>
<p class="text-center">
    <a asp-action="Create">Create New</a> |
    <a href="#">Archived Projects</a>
</p>

@foreach (var item in Model)
{
    <br />
    <div class="card">
        <div class="card-header text-center">
            <h4><a asp-action="Details" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.Name)</a></h4>
        </div>
        <div class="card-body">
            <p class="card-text">
                Some description of the project needs to go here, so a new property needs to be added to projects
                for descriptions.
            </p>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
            <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
        </div>
    </div>
}


