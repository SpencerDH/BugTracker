@model BugTracker.Models.Project

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <h4>Bugs</h4>
    <a class="nav-link text-dark" asp-area="" asp-controller="BugPages" asp-action="Index">Bugs Index</a>
    <br />
    @foreach (var item in Model.BugPages)
    {
        <p>
        <a asp-controller="BugPages" asp-action="Details" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.Name)</a>
        </p>
    }
</div>
<div>
    <a href="@Url.Action("Create", "BugPages", new { projectid = Model.ID })">Create New Bug A Different Way</a>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
