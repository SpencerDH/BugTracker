@model BugTracker.Models.Project

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">@Html.DisplayFor(model => model.Name)</h1>
<div class="text-center">
    <a href="@Url.Action("Create", "ProjectTasks", new { projectid = Model.ID })">Create New Task</a>
</div>

@foreach (var item in Model.ProjectTasks)
{
    <br />
    
    <div class="card">
        <div class="card-header text-center">
            <h4><a asp-controller="ProjectTasks" asp-action="Details" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.Name)</a></h4>
        </div>
        <div class="card-body">
            <p class="card-text">
                Descriptive text associated with each task needs to go here.
            </p>

            <div class="card">
                <div class="card-header" id="headingOne">
                    <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" role="button">
                        Summary
                    </button>
                </div>
                <div class="collapse" id="collapseOne">
                    <div class="card card-body">
                        Description of the project goes here.

                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header" id="headingTwo">
                    <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseTwo" role="button">
                        Issues
                    </button>
                </div>
                <div class="collapse" id="collapseTwo">
                    <div class="card card-body">
                        <form asp-action="Details" method="get">
                            <div class="form-actions no-color">
                            </div>
                        </form>
                    </div>
                </div>
            </div>


        </div>
        <div class="card-footer">
            <p class="text-center">
                <a asp-controller="ProjectTasks" asp-action="Edit" asp-route-id="@item.ID">Edit Task</a> |
                <a asp-controller="ProjectTasks" asp-action="Delete" asp-route-id="@item.ID">Delete Task</a>
            </p>
        </div>
    </div>
}

