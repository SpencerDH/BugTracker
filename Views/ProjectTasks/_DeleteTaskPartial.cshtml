@model BugTracker.Models.ProjectTask

<div class="modal fade" id="deleteTask">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal header -->
            <div class="modal-header">
                <h4 class="modal-title" id="close-issue-confirmation-header">Are you sure you want to delete this task?</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
            </div>

            <!-- Modal body to close ticket -->
            <div class="modal-body">
                <input type="button" class="btn btn-danger justify-content-center" style="width: 150px;" value="Delete Task" onclick="location.href='@Url.Action("DeleteConfirmed", "ProjectTasks", new {id = ViewBag.projecttaskid})'" />
            </div>
        </div>
    </div>
</div>