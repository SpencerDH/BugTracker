@model BugTracker.Models.ProjectTask

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4 class="justify-content-center">Edit @Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" /> <!-- Hidden input for ID -->
            <input type="hidden" asp-for="ProjectID" />

            <div class="form-group"> <!-- Name property begin -->
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div> <!-- Name property end -->

            <div class="form-group"> <!-- Summary property begin -->
                <label asp-for="Summary" class="control-label"></label>
                <input asp-for="Summary" class="form-control"/>
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div> <!-- Summary property end -->

            <div class="form-group"> <!-- Description property begin -->
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div> <!-- Description property end -->

            <div class="form-group"> <!-- Submission begin -->
                <input type="submit" value="Save" class="btn btn-primary" />
            </div> <!-- Submission end -->
        </form>
    </div>
</div>

<div>
    <a asp-controller="Projects" asp-action="Details" asp-route-id="@Model.ProjectID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
