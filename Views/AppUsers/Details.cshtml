@model BugTracker.Models.AppUser

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userId = ViewBag.userId;
}

<h1>Details</h1>

<table class="table">
    <thead>
        <tr>
            <th>Issues</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ui in Model.UserIssues)
        {
            <tr>
                <td>
                    @ui.Issue.Name
                </td>
            </tr>
        }
    </tbody>
</table>

<table class="table">
    <thead>
        <tr>
            <th>Comment</th>
            <th>Date</th>
            <th>Issue</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comment in Model.IssueComments)
        {
            <tr>
                <td>@comment.Comment</td>
                <td>@comment.CreatedDate</td>
                <td>@comment.Issue.Name</td>
            </tr>
        }
    </tbody>
</table>

