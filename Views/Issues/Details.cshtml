@model BugTracker.ViewModels.IssueAndCommentsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int IssueID = Model.issue.ID;
    Console.WriteLine("IssueID: ");
    Console.WriteLine(IssueID);
}

<style>
    div.attachments-box {
        border: solid gray;
        margin: 20px;
        width: 320px;
    }

    div.flex-container {
        display: flex;
        flex-direction: row;
    }
</style>

<h1 style="text-align:center">@Model.issue.Name</h1>

<div class="flex-container">
    <div>
        <h4>Comments</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Issue Comment</th>
                    <th>Date Created</th>
                    <th>Created By</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var comment in Model.issueComments)
                {
                    <tr>
                        <td>@comment.Comment</td>
                        <td>@comment.CreatedDate</td>
                        <td>@comment.UserCreated</td>
                    </tr>
                }
            </tbody>
        </table>
        <form asp-controller="Issues" asp-action="Details" method="post">
            <div class="form-group">
                <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#textBox">
                    Add Comment
                </button>
                <div>
                    <input type="hidden" id="UserCreated" name="UserCreated" value="@User.Identity.Name" />
                </div>
                <div>
                    <input type="hidden" id="IssueID" name="IssueID" value="@IssueID" />
                </div>
                <div class="collapse" id="textBox">
                    <textarea asp-for="issueComment.Comment" class="form-control" id="issueCommentTextBox" rows="3" placeholder="What are your thoughts?"></textarea>
                    <button type="submit" class="btn btn-primary" onclick="location.href='@Url.Action("Issues", "Details", new { id = Model.issue.ID })'">Submit</button>
                </div>
            </div>
        </form>
    </div>
    <div class="attachments-box">

    </div>
</div>

