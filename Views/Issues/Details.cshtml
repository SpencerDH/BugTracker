@model BugTracker.ViewModels.IssueAndCommentsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    div.attachments-box {
        border: solid gray;
        margin: 20px;
        width: 320px;
    }

    div.flex-container {
        display: flex;
        flex-direction: row;
    }
</style>

<h1 style="text-align:center">@Model.issue.Name</h1>

<div class="flex-container">
    <div>
        <h4>Comments</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Issue Comment</th>
                    <th>Date Created</th>
                    <th>Created By</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var comment in Model.issueComments)
                {
                    <tr>
                        <td>@comment.Comment</td>
                        <td>@comment.CreatedDate</td>
                        <td>@comment.AppUser</td>
                    </tr>
                }
            </tbody>
        </table>
        <input style="color:gray" type="text" name="commentInput" value="Add Comment" />
    </div>
    <div class="attachments-box">

    </div>
</div>

