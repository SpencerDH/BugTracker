@model BugTracker.Models.Issue

<div class="modal fade" id="createIssue">
    <div class="modal-dialog">
        <div class="modal-content">
            <!--  Modal header -->
            <div class="modal-header">
                <h4 class="modal-title" id="createIssueLabel">Create New Issue</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
            </div>

            <!--  Modal body, with Create form from the Issues controller -->
            <div class="modal-body">
                <form asp-controller="Issues" asp-action="Create">
                    <div class="form-group">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Status" class="control-label"></label>
                            <select asp-for="Status" class="form-control" id="status">
                                <option value="Open">Open</option>
                                <option value="Closed">Closed</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Priority" class="control-label"></label>
                            <select asp-for="Priority" class="form-control" id="priority">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                            <span asp-validation-for="Priority" class="text-danger"></span>
                            <br />
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Issues", new { projecttaskid = ViewBag.projecttaskid })'"/>
                            </div>
                            <div>
                                <input type="hidden" id="ProjectTaskID" name="ProjectTaskID" value="@ViewBag.projecttaskid" />
                            </div>
                            <div>
                                <input type="hidden" id="UserCreated" name="UserCreated" value="@User.Identity.Name" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>