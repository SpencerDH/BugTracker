        <label asp-for="ProjectTaskID" class="control-label"></label>
        <select asp-for="ProjectTaskID" class ="form-control" asp-items="ViewBag.ProjectTaskID"></select>
    </div>
        -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div>
                <input type="hidden" id="ProjectTaskID" name="ProjectTaskID" value="@ViewBag.projecttaskid" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

